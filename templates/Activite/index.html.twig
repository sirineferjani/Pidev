            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <div class="d-flex px-2 py-1">
    <a href="{{ path('app_activite_new') }}"><span class="badge badge-sm bg-gradient-success">Create new</span></a>

    </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>

</html>
{% endblock %}
