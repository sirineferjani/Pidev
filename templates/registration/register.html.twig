{% extends 'base-front.html.twig' %}
{% block header %}{% endblock %}
{% block body %}

<div class="container my-5">
  <div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
          <div class="card-header">
            Register
          </div>
          <div class="card-body">
          {{form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
            <div class="form-group">
                {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.password.first, {'attr': {'class': 'form-control'}}) }}
            </div>

              <div class="form-group">
                {{ form_row(form.password.second, {'attr': {'class': 'form-control'}}) }}
            </div>
              
              <div class="form-group">
                 {{ form_row(form.roles, {'attr': {'class': 'form-control'}}) }}
              </div>

              <div class="form-group">
                  {{form_row(form.Photo,{'attr': {'placeholder':'Image Article','class':'form-control-lg'}})}}
              
              </div>
              
              <div class="form-group">
                 {{ form_row(form.adress, {'attr': {'class': 'form-control'}}) }}
              </div>
               <div class="form-group">
                 {{ form_row(form.phonenumber, {'attr': {'class': 'form-control'}}) }}
              </div>
              
            
            {{ form_end(form) }}
               <div class="form-group">
                <div class="text-center">
  <a href="{{ path('app_login') }}">Do you already have an account ?</a>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
{% endblock %}