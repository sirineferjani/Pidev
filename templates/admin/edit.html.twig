
{% extends 'base-back.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Modifier User</h5>

                    <!-- General Form Elements -->
                    {{ form_start(form) }}
                    <label for="inputText" class="col-sm-4 col-form-label">Nom</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.username,{'attr':{'class':'form-control'}}) }}
                    </div>


                    <label for="inputText" class="col-sm-4 col-form-label">email</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}

                    </div>
                    
                    <label for="inputText" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-10">
                        {{ form_widget(form.password,{'attr':{'class':'form-control'}}) }}
                    </div>
                      
                    <label for="inputText" class="col-sm-4 col-form-label">Role</label>
                    <div class="col-sm-10">
                     {{ form_widget(form.roles, {'attr': {'class': 'form-control'}, 'value': form.roles.vars.value|join(', ')}) }}
                    </div>
                      
                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(form.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(form) }}
                

                </div>
            </div>

        </div>

    </div>


{% endblock %}