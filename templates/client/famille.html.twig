{% extends 'base-front.html.twig' %}

{% block footer %} {% endblock %}
{% block header %}
<header>
  <div class="logo">
    <img src="{{ asset('front/images/logo/Layer1.png') }}" alt="Logo">
  </div>
  <nav>
    <ul>
      <li><a href="#">Activit√©</a></li>
      <li><a href="#">Boutique</a></li>
    </ul>
  </nav>
</header>
{% endblock %}

{% block stylesheet %} 
<link rel="stylesheet" type="text/css" href="{{ asset('front/css/client.css') }}" >
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_USER') %}
    <div class="row">
    <div class="container-form">
    <div class="col-md-4 gradient-custom text-center text-white"
         style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
           <img class="img-fluid my-5 mx-auto" style="width: 80px; border-radius: 50%;"
         src="{{ asset('uploads/images/' ~ app.user.image) }}" alt="..." />
        <h5>{{ app.user.username }}</h5>
        <i class="far fa-edit mb-5"></i>
    </div>
    <div class="col-md-8">
        <div class="card-body p-4">
            <h6>Information</h6>
            <hr class="mt-0 mb-4">
            <div class="row pt-1">
                <div class="col-6 mb-3">
                    <h6>Email</h6>
                    <p class="text-muted">{{ app.user.email }}</p>
                </div>
            </div>
  
            <div class="d-flex justify-content-start">
                <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
            </div>
        </div>
    </div>
    
{% else %}
    <p>Please log in to view your information</p>
{% endif %}

{% endblock %}
